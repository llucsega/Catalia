<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seleccio_nivell"
        android:textSize="20sp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnBasic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nivell_basic" />

    <Button
        android:id="@+id/btnIntermedi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nivell_intermedi" />

    <Button
        android:id="@+id/btnAvançat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nivell_avançat" />
</LinearLayout>

